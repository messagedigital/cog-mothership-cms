{% extends 'Message:Mothership:ControlPanel::_templates/left_sidebar' %}

{% block sidebar %}
	{{ render(controller('Message:Mothership:CMS::Controller:Sidebar#index'))}}
{% endblock %}

{% block main %}
	<h1>Create a new page</h1>
	<form action="/admin/cms/create/process" method="post">
		<label for="create-title">Title</label>
		<input type="text" name="create[title]" id="create-title" />
		<label for="create-type">Type</label>
		<select name="create[type]" id="create-select">
			{% for type in pageTypes %}
				<option value="{{ type.getName }}">{{ type.getName }}</option>
			{% endfor %}
		</select>
		<button type="submit" name="create[submit]" id="create-submit" value="Create Page">Create Page</button>
	</form>
{% endblock %}